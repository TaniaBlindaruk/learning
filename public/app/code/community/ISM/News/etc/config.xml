<?xml version="1.0" ?>
<config>
    <modules>
        <ISM_News>
            <version>0.0.1</version>
        </ISM_News>
    </modules>
    <admin>
        <routers>
            <ismnews_admin>
                <use>admin</use>
                <args>
                    <module>ISM_News</module>
                    <frontName>ismnews_admin</frontName>
                </args>
            </ismnews_admin>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <ismnews module="ismnews">
                <title>News</title>
                <sort_order>77</sort_order>
                <action>ismnews_admin/adminhtml_news</action>
            </ismnews>
        </menu>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <ismnews>
                    <file>ism_news.xml</file>
                </ismnews>
            </updates>
        </layout>
        <routers>
            <ismnews>
                <use>standard</use>
                <args>
                    <module>ISM_News</module>
                    <frontName>news</frontName>
                </args>
            </ismnews>
        </routers>
    </frontend>
    <global>
        <blocks>
            <ismnews>
                <class>ISM_News_Block</class>
            </ismnews>
        </blocks>
        <helpers>
            <ismnews>
                <class>ISM_News_Helper</class>
            </ismnews>
        </helpers>
        <models>
            <ismnews>
                <class>ISM_News_Model</class>
                <resourceModel>ismnews_resource</resourceModel>
            </ismnews>
            <ismnews_resource>
                <class>ISM_News_Model_Resource</class>
                <entities>
                    <table_news>
                        <table>ism_news_entities</table>
                    </table_news>
                </entities>
            </ismnews_resource>
        </models>
        <resources>
            <ismnews_setup>
                <setup>
                    <module>ISM_News</module>
                </setup>
            </ismnews_setup>
        </resources>
    </global>
</config>