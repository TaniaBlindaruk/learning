<?xml version="1.0"?>
<config>
    <modules>
        <ISM_NewstoreMembers>
            <version>0.0.1</version>
        </ISM_NewstoreMembers>
    </modules>
    <global>
        <helpers>
            <newstoremembers>
                <class>ISM_NewstoreMembers_Helper</class>
            </newstoremembers>
        </helpers>
        <blocks>
            <newstoremembers>
                <class>ISM_NewstoreMembers_Block</class>
            </newstoremembers>
        </blocks>
        <models>
            <newstoremembers>
                <class>ISM_NewstoreMembers_Model</class>
                <resourceModel>newstoremembers_resource</resourceModel>
            </newstoremembers>
            <newstoremembers_resource>
                <class>ISM_NewstoreMembers_Model_Resource</class>
                <entities>
                    <newstoremembers>
                        <table>ism_newstoremembers_numbers</table>
                    </newstoremembers>
                </entities>
            </newstoremembers_resource>
        </models>
        <resources>
            <newstoremembers_setup>
                <setup>
                    <module>ISM_NewstoreMembers</module>
                    <!--<class>Mage_Catalog_Model_Resource_Setup</class>-->
                    <class>Mage_Sales_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </newstoremembers_setup>
        </resources>
        <controller_action_predispatch>

        </controller_action_predispatch>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <ISM_NewstoreMembers_Adminhtml before="Mage_Adminhtml">ISM_NewstoreMembers_Adminhtml</ISM_NewstoreMembers_Adminhtml>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <controller_action_predispatch_customer_group_delete>
                <observers>
                    <newstoremembers_controller_action_predispatch_customer_group_delete>
                        <type>model</type>
                        <class>newstoremembers/observer</class>
                        <method>controllerActionPredispatchCustomerGroupDelete</method>
                    </newstoremembers_controller_action_predispatch_customer_group_delete>
                </observers>
            </controller_action_predispatch_customer_group_delete>
        </events>
    </adminhtml>
    <customer>
        <create_account>
            <default_group>
                <stores>
                    4
                </stores>
            </default_group>
        </create_account>
    </customer>
</config>
